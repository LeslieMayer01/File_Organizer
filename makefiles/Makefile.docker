docker-build:
	@echo "ğŸ”¨ Building Docker image..."
	docker build -t file-organizer .

docker-clean:
	@echo "ğŸ§¹ Removing Docker image..."
	docker rmi -f file-organizer || true

docker-run:
	@echo "ğŸ³ Running in Docker with volume from .env..."
	docker run --rm \
		--env-file .env \
		-v $(shell grep FOLDER_TO_ORGANIZE .env | cut -d '=' -f2):/data \
		-v $(PWD)/reports:/app/reports \
		file-organizer $(ARGS)
